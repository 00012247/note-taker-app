<div class="container main mt-5 h-100" >
    <form action="/add/notes" method="POST" class="d-flex justify-content-center">
        <input type="text" name="todo" placeholder="Let's write notes..." class="w-50 form-control">
        <button type="submit"  class="btn  btn-primary mx-2">Add notes </button>
    </form>


    <ul class="list-group mt-5  ">
        <% todo.forEach(todos => { %>
            <li class="list-group-item d-flex justify-content-between"> <%= todos.todo %>
                <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a>
            </li>
            
            <% } ) %>
